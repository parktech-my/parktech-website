---
// @ts-ignore
import { Image } from "astro:assets";
import { Icon } from "astro-icon";

import gentingImage from "../assets/genting.png";
import skyworldImage from "../assets/skyworld.jpg";
---

<div class="mt-24">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">Clients</h2>
  <!-- <p class="text-lg mt-4 text-slate-600">
    Astro comes batteries included. It takes the best parts of state-of-the-art
    tools and adds its own innovations.
  </p> -->

  <div class="relative flex flex-nowrap overflow-x-hidden">
    <div class="py-5 animate-marquee flex flex-nowrap">
      <Image
        src={gentingImage}
        alt="ZEAG"
        loading="eager"
        format="avif"
        class="mx-20"
      />
      <Image
        src={skyworldImage}
        alt="TIRIS"
        width={300}
        loading="eager"
        format="avif"
        class="mx-20"
      />
    </div>

    <div class="absolute top-0 py-5 animate-marquee2 flex flex-nowrap">
      <Image
        src={gentingImage}
        alt="ZEAG"
        loading="eager"
        format="avif"
        class="mx-20"
      />
      <Image
        src={skyworldImage}
        alt="TIRIS"
        width={300}
        loading="eager"
        format="avif"
        class="mx-20"
      />
    </div>
  </div>
</div>
